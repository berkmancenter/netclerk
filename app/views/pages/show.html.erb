<% cache_if(@cache_key.present?, "pages/#{@page.id}/#{@cache_key}", expires_in: cache_duration) do %>
  <%= render @page %>

  <%= link_to edit_page_path(@page) do %>
    <button type="button" class="btn btn-primary">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
    </button>
  <% end %>

  <%= button_to @page, method: :delete, data: { confirm: 'Are you sure you want to delete this page?' }, form_class: 'delete', class: 'btn btn-danger' do %>
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
  <% end %>

  <h2><%= t 'pages.recent' %></h2>

  <% if @statuses.any? %>
    <%= render 'recent_statuses' %>
  <% else %>
    <p>No recent statuses.</p>
  <% end %>
<% end %>
