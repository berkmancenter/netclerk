<%= simple_form_for(@page, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :url %>
  <%= f.input :title %>
  <%= f.association :categories, as: :check_boxes %>
  <%= f.button :submit %>
  <%= link_to :back do %>
    <button type="button" class="btn btn-default">
      Cancel
    </button>
  <% end %>
<% end %>
